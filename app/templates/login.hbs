<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h3>Log In</h3>
</div>
</div>
<form {{action 'loginUser' on='submit'}}class="form-horizontal" role='form'>
<div class='form-group'>
<div class="row">
<label class="col-sm-5 control-label" for='userEmail'><p class='lead'>Please enter your email.</p></label>
<div class="col-sm-4">
{{input type="email" classNames="form-control" value=userEmail id="userEmail" placeholder="name@example.com"}}
</div>
</div>
<label class="col-sm-5 control-label" for='userPassword'><p class='lead'>Please enter your password.</p></label>
<div class="col-sm-4">
{{input type="password" classNames="form-control" value=userPassword id="userPassword" placeholder="secret but memorable"}}
</div>

<div class="col-sm-10">
<button type="submit" class="btn btn-custom pull-right">Log In</button>
</div>
</div>
</form>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
    {{#if error}}
      <div class="alert alert-warning">
        <div class="alert-title"><h4>Oops, there was a problem:</div>
        <h5>{{error.message}}</h5>
      </div>
    {{/if}}
</div>
</div>

